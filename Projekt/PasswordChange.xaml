<Window x:Class="Projekt.PasswordChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="PasswordChange" Height="350" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Change Password" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <Label Content="Obecne hasło:"/>
            <PasswordBox x:Name="currentPasswordBox" Width="200" Margin="0,0,0,10"/>

            <Label Content="Nowe hasło:"/>
            <PasswordBox x:Name="newPasswordBox" Width="200" Margin="0,0,0,10"/>

            <Button Content="Zmien hasło" Width="150" Height="30" Click="ChangePassword_Click"/>
        </StackPanel>
    </Grid>
</Window>
